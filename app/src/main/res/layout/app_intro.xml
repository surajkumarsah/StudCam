<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".App_Intro_Activity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="100dp"
        android:layout_marginRight="20dp" />


    <Button
        android:visibility="invisible"
        android:id="@+id/get_started"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Started"
        android:background="@drawable/btn_gradient_style"
        android:textColor="#fff"
        android:layout_above="@+id/btn_next"
        android:drawableTint="@color/blue"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginRight="50dp"
        />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEXT  "
        android:background="#fff"
        android:drawableRight="@drawable/ic_appintro_arrow_forward_white"
        android:drawableTint="@color/blue"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:paddingStart="10dp"
        android:layout_marginRight="50dp"
        />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_indecator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        app:tabBackground="@drawable/indecator_selector"></com.google.android.material.tabs.TabLayout>
</RelativeLayout>